[alias]
  # Command shortcuts with preferred options
  a = add
  ap = apply
  bi = bisect
  bl = blame
  br = branch --all --remotes --verbose
  cf = config
  ci = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  d = diff
  de = describe
  f = fetch
  g = grep -I --line-number --ignore-case
  h = help
  i = init
  l = log
  m = merge
  mt = mergetool
  mv = move
  p = push
  pl = pull
  r = reset
  rb = rebase
  rt = remote
  rv = revert
  s = stash
  sa = stash apply
  sh = shortlog
  sl = stash list
  ss = stash save
  st = status --short
  su = submodule
  sw = show
  t = tag
  wl = worktree list
  # Frequently used
  ai = !git a --interactive
  addremove = !git r && git a . --all
  alias = !git cf --list | grep 'alias.' | sed 's/alias.\\([^=]*\\)=\\(.*\\)/\\1 \t => \\2/' | sort | uniq
  all = !git a . --all
  ca = !git ci --amend
  caa = !git ca --all --reuse-message=HEAD
  cae = !git ca --edit
  cm = "!f() { git ci --message=\"$1\"; }; f"
  cma = "!f() { git ci --all --message=\"$1\"; }; f"
  dc = !git d --cached
  dw = !git d --word-diff
  la = !git cf -l | grep alias | cut -c 7-
  last = "!gvim $(git show HEAD --format="" --name-only | grep -e .*md$ | xargs)"
  #lc = "!f() { git ll \"$1\"^..\"$1\"; }; f"
  ld = !git l --decorate --graph --format='%Cblue%ad%Creset %C(yellow)%h%Creset%Cgreen%d%Creset\\ %s\\ [%an]'
  lg = log --decorate --graph --oneline
  #lf = !git ls-files | grep -i
  ll = !git l --pretty=format:'%Cgreen%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --numstat
  lo = !git l --oneline --max-count=15
  lp = log --patch
  ls = !git l --pretty=format:'%Cgreen%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --date=relative
  lt = !git de --tags --abbrev=0
  r1 = !git r HEAD^
  r2 = !git r HEAD^^
  rh = !git r --hard
  rh1 = !git r HEAD^ --hard
  rh2 = !git r HEAD^^ --hard

  undo = "!f() { git r --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
  unstage = !git r HEAD --
  up = !git pl --rebase

[apply]
  whitespace = nowarn
[branch]
  autoSetupMerge = true
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  plain = white bold
[color "status"]
  added = yellow
  changed = green
  untracked = red
[core]
  editor = nvim -c 'put_' -c 'startinsert'
  excludesfile = $HOME/.config/git/ignore
  pager = less -x 4
  quotepath = false
  whitespace = fix
[credential]
  helper = osxkeychain
[diff]
  mnemonicprefix = true
  tool = meld
[difftool]
  prompt = false
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs cmudge %f
  required = true
[include]
  path = ~/.private/git/config
[merge]
  conflictstyle = diff3
  tool = meld
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[pull]
  default = current
[push]
  default = current
[rebase]
  autosquash = true
[rerere]
  enabled = false
[url "https://github.com/"]
  insteadOf = gh:
[url "https://gist.github.com/"]
  insteadOf = gist:
[url "https://bitbucket.org/"]
  insteadOf = bb:
[user]
  name = Nathanial L. McConnell
  email = fluxaugur@gmail.com
